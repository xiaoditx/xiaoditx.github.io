{
  "gitInstallationOptions": {
      "version": "2.48.1",
      "lastUpdated": "2025-01-01",
      "steps": [
          {
              "id": "installation_directory",
              "stepNumber": 1,
              "title": "选择安装目录",
              "description": "选择Git的安装位置，建议使用默认位置或自定义到合适的目录",
              "type": "radio",
              "required": true,
              "defaultValue": "C:\\Program Files\\Git",
              "recommendation": "建议使用默认路径，或改为D盘以节省C盘空间",
              "options": [
                  {
                      "label": "默认位置 (C:\\Program Files\\Git)",
                      "value": "C:\\Program Files\\Git",
                      "description": "安装到C盘的Program Files目录",
                      "recommended": true
                  },
                  {
                      "label": "自定义位置",
                      "value": "custom",
                      "description": "选择自定义安装目录，如D:\\Git",
                      "recommended": false
                  }
              ],
              "output": "选择安装目录为: {value}",
              "tips": "如果C盘空间不足，可以安装到D盘或其他分区"
          },
          {
              "id": "default_editor",
              "stepNumber": 2,
              "title": "选择Git默认编辑器",
              "description": "选择Git在需要编辑文本时使用的默认编辑器，一共十个左右，但是除了Vim都需要单独从官网下载",
              "type": "radio",
              "required": true,
              "defaultValue": "notepad++",
              "recommendation": "新手建议选择Notepad++或VS Code，Vim需要学习成本",
              "options": [
                  {
                      "label": "Vim",
                      "value": "vim",
                      "description": "功能强大的命令行编辑器，学习曲线有些陡峭，不适合新手，好处是不需要单独从官网下载",
                      "recommended": false
                  },
                  {
                      "label": "Notepad++",
                      "value": "notepad++",
                      "description": "免费的源代码编辑器，功能丰富，适合新手",
                      "recommended": true
                  },
                  {
                      "label": "Visual Studio Code",
                      "value": "vscode",
                      "description": "微软开发的免费代码编辑器，功能强大",
                      "recommended": true
                  },
                  {
                      "label": "Sublime Text",
                      "value": "sublime",
                      "description": "轻量级的代码编辑器",
                      "recommended": false
                  },
                  {
                      "label": "Notepad",
                      "value": "notepad",
                      "description": "Windows自带的记事本，功能简单",
                      "recommended": false
                  }
              ],
              "output": "选择默认编辑器为: {value}",
              "tips": "如果选择的非Vim编辑器未安装，需要先安装才能继续"
          },
          {
              "id": "default_branch_name",
              "stepNumber": 3,
              "title": "选择默认分支名称",
              "description": "决定新仓库的默认分支名称，这是Git 2.28版本后的新功能",
              "type": "radio",
              "required": true,
              "defaultValue": "main",
              "recommendation": "建议选择'main'，这是现代标准",
              "options": [
                  {
                      "label": "让Git决定",
                      "value": "git_decide",
                      "description": "让Git自动选择（当前为master，未来可能改变）",
                      "recommended": false
                  },
                  {
                      "label": "main",
                      "value": "main",
                      "description": "使用'main'作为默认分支名，符合现代标准",
                      "recommended": true
                  },
                  {
                      "label": "master",
                      "value": "master",
                      "description": "使用传统的'master'作为默认分支名，不过这几年因为种族歧视问题这个东西基本上快被废掉了",
                      "recommended": false
                  },
                  {
                      "label": "自定义",
                      "value": "custom",
                      "description": "输入自定义的默认分支名称",
                      "recommended": false
                  }
              ],
              "output": "选择默认分支名称为: {value}",
              "tips": "很多团队已将默认分支从master重命名为main"
          },
          {
              "id": "path_environment",
              "stepNumber": 4,
              "title": "调整PATH环境变量",
              "description": "选择如何从命令行使用Git，影响Git在系统中的可访问性",
              "type": "radio",
              "required": true,
              "defaultValue": "git_from_command_line_and_3rd_party_tools",
              "recommendation": "建议选择中间选项，既能从命令行使用，又不会影响系统工具",
              "options": [
                  {
                      "label": "仅从Git Bash使用Git",
                      "value": "git_bash_only",
                      "description": "仅从安装的Git Bash来使用Git，不会修改系统的PATH，你无法通过命令行或者其他工具使用Git功能",
                      "recommended": false
                  },
                  {
                      "label": "从命令行和第三方软件使用Git",
                      "value": "git_from_command_line_and_3rd_party_tools",
                      "description": "允许你从命令行和第三方软件使用Git，会添加安装路径到系统环境变量，推荐选择",
                      "recommended": true
                  },
                  {
                      "label": "在命令提示符中使用Git和可选的Unix工具",
                      "value": "use_git_and_optional_unix_tools",
                      "description": "使用Git和可选的Unix工具，可能覆盖系统工具",
                      "recommended": false
                  }
              ],
              "output": "PATH环境变量配置: {value}",
              "tips": "中间选项是最安全的选择，适合大多数用户"
          },
          {
              "id": "ssh_executable",
              "stepNumber": 5,
              "title": "选择SSH可执行文件",
              "description": "选择Git使用哪个SSH客户端进行安全连接",
              "type": "radio",
              "required": true,
              "defaultValue": "use bundled ssh",
              "recommendation": "建议使用Git捆绑的OpenSSH，除非有特殊需求",
              "options": [
                  {
                      "label": "使用自带的SSH",
                      "value": "use bundled ssh",
                      "description": "使用Git捆绑的OpenSSH，推荐选择",
                      "recommended": true
                  },
                  {
                      "label": "使用外部SSH",
                      "value": "use external ssh",
                      "description": "使用自己预先安装过的外部SSH客户端（如PuTTY）",
                      "recommended": false
                  }
              ],
              "output": "SSH客户端选择: {value}",
              "tips": "大多数用户应该选择使用Git捆绑的OpenSSH"
          },
          {
              "id": "https_transport_backend",
              "stepNumber": 6,
              "title": "选择HTTPS传输后端",
              "description": "选择Git在进行HTTPS操作时使用的后端库",
              "type": "radio",
              "required": true,
              "defaultValue": "use openssl",
              "recommendation": "建议使用OpenSSL，兼容性更好",
              "options": [
                  {
                      "label": "使用OpenSSL",
                      "value": "use openssl",
                      "description": "使用OpenSSL库，具有更好的兼容性",
                      "recommended": true
                  },
                  {
                      "label": "使用Windows安全通道",
                      "value": "use windows secure channel",
                      "description": "使用Windows安全通道，与企业CA更好集成",
                      "recommended": false
                  }
              ],
              "output": "HTTPS传输后端: {value}",
              "tips": "OpenSSL通常提供更好的兼容性"
          },
          {
              "id": "line_ending_conversion",
              "stepNumber": 7,
              "title": "配置行尾符号转换",
              "description": "选择Git如何处理不同操作系统间的行尾符差异，因为Windows采用换行回车而UNIX、Linux等采用单独的换行",
